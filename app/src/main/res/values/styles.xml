<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <!-- UI -->
    <style name="TitleStyle">
        <item name="android:gravity">center</item>
        <item name="backgroundColor">@color/colorAccent</item>
    </style>
    <style name="ButtonStyle">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="TabStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="tabTextColor">@android:color/black</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>
    <!-- activity_about -->
    <style name="about_text">
        <item name="android:textSize">17sp</item>
    </style>
    <!-- activity_account-->
    <style name="AccountStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="dividerStyle">
        <item name="backgroundColor">@color/colorPrimary</item>
        <item name="android:layout_height">5dp</item>
    </style>
</resources>