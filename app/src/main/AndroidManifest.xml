<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thirtyseven.studenthelp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".ui.common.ComplainActivity" />

        <service android:name=".utility.Remote" />

        <activity android:name=".ui.common.ZoneActivity" />
        <activity android:name=".ui.me.AboutActivity" />
        <activity android:name=".ui.me.SettingsActivity" />
        <activity android:name=".ui.me.HistoryActivity" />
        <activity android:name=".ui.me.WalletActivity" />
        <activity android:name=".ui.me.AccountActivity" />
        <activity android:name=".ui.notice.AnnouncementActivity" />
        <activity android:name=".ui.common.ConversationActivity" />
        <activity android:name=".ui.home.PublishActivity" />
        <activity android:name=".ui.common.ErrandActivity" />
        <activity android:name=".ui.login.LoginActivity" />
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>